#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	//	variables
	char c = 'a';
	short s = 0;
	int i = 1;
	long l = 2;

	// print statements
	printf("The character 'c' value is %c. The size of 'c' is %d\n", c, sizeof(c));
	printf("The short 's' value is %d. The size of 's' is %d\n", s, sizeof(s));
	printf("The integer 'i' value is %d. The size of 'i' is %d\n", i, sizeof(i));
	printf("The long 'l' value is %ld. The size of 'l' is %d\n", l, sizeof(l));

	// float | user input and print
	float n;
	printf("Enter a float value : ");
	scanf("%f", &n);
	printf("%f %e %g The size is %d\n", n, n, n, sizeof(n));

	// character array
	char str[20];
	printf("Enter a string: ");
	scanf("%[^\n]s", str);
	printf("%s", str);

	while (1) {}
	return EXIT_SUCCESS;
}
