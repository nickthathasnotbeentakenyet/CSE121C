#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	//	variables
	char c = 'a';
	short s = 0;
	int i = 1;
	long l = 2;

	// print statements
	printf("The character 'c' value is %c. The size of 'c' is %d\n", c, sizeof(c));
	printf("The short 's' value is %d. The size of 's' is %d\n", s, sizeof(s));
	printf("The integer 'i' value is %d. The size of 'i' is %d\n", i, sizeof(i));
	printf("The long 'l' value is %d. The size of 'l' is %ld\n", l, sizeof(l));

	// user input
	float f = 1.0;
	printf("Input floating point value: ");
	scanf("%f", &f);
	printf("%f %e %g The size is %id\n", f, f, f, sizeof(f));

	return EXIT_SUCCESS;
}
